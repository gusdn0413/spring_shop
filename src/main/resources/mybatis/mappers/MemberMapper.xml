<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nc13.mappers.MemberMapper">
    <select id="selectByEmail" parameterType="String" resultType="memberDTO">
        SELECT * FROM member
        WHERE email = #{email}

    </select>
    <insert id="register" parameterType="memberDTO">
        INSERT INTO member(email, name, password, nickname)
        VALUES(#{email}, #{name}, #{password}, #{nickname})
    </insert>

    <select id="selectOne" parameterType="int" resultType="memberDTO">
        SELECT * FROM member
        WHERE id = #{id}
    </select>

    <select id="auth" parameterType="memberDTO" resultType="memberDTO">
        SELECT * FROM member
        WHERE email = #{email} AND
        password = #{password}
    </select>

    <update id="update" parameterType="memberDTO">
        UPDATE member
        SET email = #{email},
        name = #{name},
        nickname = #{nickname},
        address = #{address},
        phone_number = #{phoneNumber}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM member
        WHERE id = #{id}
    </delete>
</mapper>
