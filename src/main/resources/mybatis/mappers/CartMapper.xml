<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nc13.mappers.CartMapper">

    <insert id="insert" parameterType="cartDTO">
        INSERT INTO cart (item_id, name, price, member_customer_id, member_seller_id, entry_date, quantity)
        VALUES(#{itemId}, #{name}, #{price}, #{memberCustomerId}, #{memberSellerId}, NOW(), #{quantity})
    </insert>

    <select id="selectAll" resultType="cartDTO">
        SELECT * FROM cart WHERE member_customer_id = #{memberCustomerId}
    </select>

    <select id="selectOne" resultType="cartDTO">
        SELECT * FROM cart WHERE id = #{id}
    </select>

    <delete id="delete" parameterType="int">
        DELETE FROM cart
        WHERE id = #{id}
    </delete>

    <update id="update" parameterType="cartDTO">
        UPDATE cart
        SET quantity = #{quantity},
        price = #{price}
        WHERE id = #{id}
    </update>
</mapper>
